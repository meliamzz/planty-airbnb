<div class="container">
  <div class="row">
    <div class="col-8">
      <% @plants.each do |plant| %>
      <div class="clikable">
        <div class="my-card d-flex">
          <% if plant.photo.key %>
            <div class="my-card-vignet" style="background-image: url('<%= cl_image_path plant.photo.key, crop: :fill %>')">
          <% else %>
            <div class="my-card-vignet" style="background-image: url('https://media.gerbeaud.net/2016/12/640/rosiers-en-pots.jpg')">
          <% end %>
        </div>
          <div class="my-card-infos d-flex">
            <div class="my-card-infos-item d-flex">
              <h4 class="title-my-plant"> <%= plant.category %> <br><span><%= plant.variety %></span> </h4>
            </div>
            <div class="my-card-infos-item d-flex">
              <div class="price-my-plant"><%= plant.price_per_day %>$<span>/day</span> </div>
            </div>
          </div>
        </div>
      </div>
<% end %>
    </div>
    <div class="col-4">
      <div id="plant-new">
        <h5 class="title-new-plant text-center">New plant</h5>
          <%= simple_form_for @plant do |f| %>
            <%= f.input :title %>
            <%= f.input :variety %>
            <%= f.input :category %>
            <%= f.input :description %>
            <%= f.input :price_per_day %>
            <%= f.input :height %>
            <%= f.input :photo %>
            <%= f.button :submit, class: "btn btn-warning" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
