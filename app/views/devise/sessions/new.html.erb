<div class="container mt-4">
  <div class="col-6 mx-auto border border-warning border-3 p-3">
    <h2 class="text-center text-warning m-2">Log in</h2>
    <div class="col-10 mx-auto">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="mb-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          </div>
          <div class="mb-4">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions mb-4">
          <%= f.button :submit, "Log in", class: "btn btn-warning col-12" %>
        </div>
      <% end %>
    </div>
    <div class="text-center col-10 mx-auto devise-links">
    <%= render "devise/shared/links", class: "text-warning" %>
    </div>
  </div>
</div>
